"0")
Baza_ruchu_granicznego_cudzoziemcy2023 <- as.data.frame(Baza_ruchu_granicznego_cudzoziemcy2023)

Baza_ruchu_granicznego_cudzoziemcy2023$Razem[is.na(Baza_ruchu_granicznego_cudzoziemcy2023$Razem) | Baza_ruchu_granicznego_cudzoziemcy2023$Razem == "NA"] <- 0

Baza_ruchu_granicznego_cudzoziemcy2023$`UE / Schengen`[is.na(Baza_ruchu_granicznego_cudzoziemcy2023$`UE / Schengen`) | Baza_ruchu_granicznego_cudzoziemcy2023$`UE / Schengen` == "NA"] <- 0

