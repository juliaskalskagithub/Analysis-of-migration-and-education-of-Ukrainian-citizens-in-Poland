colnames(suma_swiadczen_kobiety) <- c("Liczba wniosków złożonych przez kobiety")
suma_swiadczen_kobiety
suma_swiadczen_mezczyzni <- data.frame(sum(tabela_świadczeń$Liczba_mezczyzn))
colnames(suma_swiadczen_mezczyzni) <- c("Liczba wniosków złożonych przez mężczyzn")
suma_swiadczen_mezczyzni

