Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,-2]

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,-3]

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,-4]

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,-5]

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,-6]

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,-7]

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,8:9][is.na(Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,8:9]) | Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[,8:9] == "NA"] <- 0

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023[ , colSums(is.na(Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023))==0] 

Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 <- mutate_at(Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023, vars(7:8), as.numeric) 


Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty <- Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty_stan_na_19_06_2023 %>%
  group_by(`Typ Podmiotu`) %>%
  summarise(Liczba_uczniow = sum(`Liczba uczniów pobyt legalny`))

wykres5 <- ggplot(Uczniowie_uchodźcy_z_Ukrainy_w_podziale_na_typy_szkół_klasy_i_powiaty, aes(x = `Typ Podmiotu`, y = Liczba_uczniow)) +
  geom_bar(stat = "identity", aes(fill = Liczba_uczniow)) +  
  labs(title = "Liczba Uczniów z Obywatelstwem Ukrainy od 11 kwietnia 2022 roku, stan na 19 czerwca 2023 roku",
       x = "Typy szkół",
       y = "") +
  theme_minimal() +
  theme(axis.text.x = element_text(angle = 0, hjust = 1),
        plot.title = element_text(size = 7),  
        plot.margin = margin(0.001, 0.001, 0.001, 0.001, "cm")) +
  scale_fill_gradient(low = "lightgreen", high = "darkorange") +
  coord_flip() +
  scale_y_log10()
zrodlo <- "Źródło:"
zrodlo2 <- "Dane dostarczone przez Ministerstwo Edukacji i Nauki, opublikowane na stronie dane.gov.pl"
zrodlo1 <- "https://dane.gov.pl/pl/dataset/2711,uczniowie-uchodzcy-z-ukrainy"
odstep <- " " 
wykres5_z_zrodlem <- ggdraw(wykres5) + 
draw_label(zrodlo, x = 0.99, y = 0.06, hjust = 1, vjust = 1,
             fontface = 'italic', color = "black", size = 7) +
  draw_label(zrodlo1, x = 0.99, y = 0.04, hjust = 1, vjust = 1,
             fontface = 'italic', color = "black", size = 7) +
  draw_label(zrodlo2, x = 0.99, y = 0.02, hjust = 1, vjust = 1,
             fontface = 'italic', color = "black", size = 7)

print(wykres5_z_zrodlem)


```
<p style="text-indent: 20px; text-align: justify;">
W analizie ilości uczniów w poszczególnych typach szkół, zauważamy znaczące zróżnicowanie pomiędzy szkołami podstawowymi i\ przedszkolami, a liczbą uczniów w liceach i technikach. Istnieją różnorodne czynniki, które mogą wpłynąć na to zjawisko. Jednym z kluczowych, wpływających na te wyniki, jest trwająca wojna, która pociąga za sobą skutki demograficzne. Mężczyźni w wieku 18 lat są wciągani do służby wojskowej, co może wpłynąć na zmniejszenie liczby uczniów w liceach i technikach, jako że muszą oni podjąć obowiązkową służbę wojskową.
</p>
<p style="text-indent: 20px; text-align: justify;">
Dodatkowo, kwestie związane z kontrolą granic mogą również odgrywać istotną rolę w tych statystykach. Ucieczka z kraju i ograniczenia w\ przepływie osób uniemożliwiają wielu młodym ludziom dostęp do edukacji.
</p>
<p style="text-indent: 20px; text-align: justify;">
Wszystkie te czynniki łącznie mogą powodować duże rozbieżności w liczbie uczniów między różnymi typami szkół.
</p>
<p style="text-indent: 20px; text-align: justify;">
 Wyniki analizy ukazują, że migracja obywateli Ukrainy do Polski wywarła zauważalny wpływ na system edukacyjny. Wzrost liczby dzieci i\ młodzieży ukraińskiej na terenie Polski skutkował zwiększonym zapotrzebowaniem na miejsca w szkołach i przedszkolach. Ponadto, ze względu na różnice w systemach edukacyjnych między Polską a Ukrainą, wielu ukraińskich uczniów potrzebowało wsparcia w nauce języka polskiego i\ integracji w nowym środowisku szkolnym. Programy wsparcia dla dzieci migracyjnych musiały zostać wdrożone, aby zapewnić im odpowiednie umiejętności językowe i integrację społeczną.
</p>

## Nadanie statusu UKR 
<p style="text-indent: 20px; text-align: justify;">
W odpowiedzi na napaść na Ukrainę, Polska podjęła zdecydowane działania w celu zapewnienia ochrony i schronienia obywatelom tego kraju, którzy znaleźli się w trudnej sytuacji. W ramach tych działań, wprowadzono możliwość nadawania im statusu cudzoziemca UKR, co umożliwia legalny pobyt w Polsce dla tych osób.
</p>
<p style="text-indent: 20px; text-align: justify;">
Status cudzoziemca UKR jest specjalnym rodzajem zgody na pobyt, przyznawanym cudzoziemcom, którzy obawiają się prześladowania w\ swoim kraju ojczystym, na przykład z powodu rasy, religii, narodowości lub przekonań politycznych. Osoby te z różnych powodów nie mogą lub nie chcą korzystać z ochrony oferowanej przez swoje kraje macierzyste, dlatego poszukują schronienia w Polsce.
</p>
<p style="text-indent: 20px; text-align: justify;">
W celu zbadania skali tego zjawiska, przeprowadzono szczegółowe badanie ilości wniosków o nadanie statusu cudzoziemca UKR. Dane te pozwalają lepiej zrozumieć potrzeby i sytuację obywateli Ukrainy, którzy szukają bezpieczeństwa i opieki w naszym kraju w czasie trwania wojny na ich rodzimym terytorium.
</p>
<p style="text-indent: 20px; text-align: justify;">
Działania te są wyrazem solidarności i współczucia wobec osób znajdujących się w trudnych okolicznościach oraz stanowią dowód na zaangażowanie w pomoc i wsparcie dla tych, którzy potrzebują ochrony i szansy na nowy początek w Polsce.
</p>
<p style="text-indent: 20px; text-align: justify;">
Do analizy danych użyto tabeli "STATYSTYKI_POWIAT_UKR_20230711", dostępnej w zakładce "Ukraina". Na podstawie tych danych utworzono tabelę, w której uwzględniono podział na województwa oraz rozróżnienie między liczbą wniosków złożonych przez kobiety i mężczyzn.
</p>
<p style="text-indent: 20px; text-align: justify;">
Aby lepiej zobrazować te dane, wykonano wykres punktowy, w którym wykorzystano kolor czerwony do oznaczenia obywatelki Ukrainy oraz kolor niebieski dla obywatela tego kraju. Na osi Y przedstawione zostały województwa, a na osi X umieszczono liczbę złożonych wniosków o\ nadanie statusu cudzoziemca UKR.
</p>
<p style="text-indent: 20px; text-align: justify;">
Ten wykres pozwolił na wizualne porównanie liczby wniosków między różnymi województwami oraz pokazał, czy to kobiety, czy mężczyźni stanowią większość w tym procesie. Dzięki temu, możliwe jest lepsze zrozumienie skali i rozkładu zgłoszeń o przyznanie statusu cudzoziemca UKR w Polsce.
</p>
```{r, echo=FALSE, include=FALSE}
STATYSTYKI_POWIAT_UKR_20230711 <- read_excel("C:/Users/Asus/Desktop/praktyki/dane/dane stat dot wniosków o nadanie statusu cudzoziemca ukr w zw z konfliktem/STATYSTYKI_POWIAT_UKR_20230711.xlsx", na =
"0")

STATYSTYKI_POWIAT_UKR_20230711 <- as.data.frame(STATYSTYKI_POWIAT_UKR_20230711)

STATYSTYKI_POWIAT_UKR_20230711[,4:66][is.na(STATYSTYKI_POWIAT_UKR_20230711[,4:66]) | STATYSTYKI_POWIAT_UKR_20230711[,4:66] == "NA"] <- 0

STATYSTYKI_POWIAT_UKR_20230711 <- STATYSTYKI_POWIAT_UKR_20230711[ , colSums(is.na(STATYSTYKI_POWIAT_UKR_20230711))==0] 

STATYSTYKI_POWIAT_UKR_20230711[,4:66][is.na(STATYSTYKI_POWIAT_UKR_20230711[,4:66]) | STATYSTYKI_POWIAT_UKR_20230711[,4:66] == "NA"] <- 0

STATYSTYKI_POWIAT_UKR_20230711 <- mutate_at(STATYSTYKI_POWIAT_UKR_20230711, vars(4:66), as.numeric) 

STATYSTYKI_WOJEWÓDZTWO_UKR_K <- STATYSTYKI_POWIAT_UKR_20230711 %>%
  group_by(`WOJEWÓDZTWO`) %>%
  summarise(Liczba_kobiet = sum(`KOBIET`))

STATYSTYKI_WOJEWÓDZTWO_UKR_K

STATYSTYKI_WOJEWÓDZTWO_UKR_M <- STATYSTYKI_POWIAT_UKR_20230711 %>%
  group_by(`WOJEWÓDZTWO`) %>%
  summarise(Liczba_mezczyzn = sum(`MĘŻCZYZN`))

```

```{r,echo=FALSE}
wykres_punktowy_5 <- ggplot() +
  geom_point(data = STATYSTYKI_WOJEWÓDZTWO_UKR_K, aes(x = WOJEWÓDZTWO, y = Liczba_kobiet), color = "red", size = 3) +
  geom_point(data = STATYSTYKI_WOJEWÓDZTWO_UKR_M, aes(x = WOJEWÓDZTWO, y = Liczba_mezczyzn), color = "blue", size = 3) +
  labs(title = "Liczba wniosków w podziale na płeć i województwo od 1958 roku do 2023 roku, stan na 11 lipca 2023 roku", x = "Województwo", y = "") +
